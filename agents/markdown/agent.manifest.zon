.{
    // ============================================================================
    // AGENT MANIFEST - Standardized Metadata Format
    // ============================================================================
    // This manifest provides comprehensive metadata for terminal AI agents.
    // All fields are optional but recommended for proper agent discovery and management.

    // ============================================================================
    // AGENT IDENTIFICATION
    // ============================================================================
    .agent = .{
        // Unique identifier for the agent (lowercase, no spaces)
        .id = "markdown",

        // Human-readable name
        .name = "Markdown Architect Pro",

        // Semantic version (e.g., "1.0.0", "2.1.3-alpha")
        .version = "2.0.0",

        // Brief description of what the agent does
        .description = "Enterprise-grade markdown systems architect & quality guardian",

        // Author information
        .author = .{
            .name = "AI Assistant",
            .email = "",
            .organization = "",
        },

        // Optional: License information
        .license = "MIT",

        // Optional: Homepage or repository URL
        .homepage = "",
    },

    // ============================================================================
    // CAPABILITIES & FEATURES
    // ============================================================================
    .capabilities = .{
        // Core capabilities this agent provides
        .core_features = .{
            // Whether agent can process files
            .file_processing = true,

            // Whether agent can execute system commands
            .system_commands = true,

            // Whether agent can make network requests
            .network_access = true,

            // Whether agent supports interactive terminal UI
            .terminal_ui = false,

            // Whether agent can process images/media
            .media_processing = false,

            // Whether agent supports real-time streaming
            .streaming_responses = true,
        },

        // Specialized features (agent-specific)
        .specialized_features = .{
            // Markdown processing capabilities
            .markdown_processing = true,

            // Document transformation and conversion
            .document_transformation = true,

            // Content editing and modification
            .content_editing = true,

            // Document validation and quality checking
            .document_validation = true,

            // Workflow processing and batch operations
            .workflow_processing = true,

            // File and directory management
            .file_management = true,
        },

        // Performance characteristics
        .performance = .{
            // Expected memory usage (low, medium, high)
            .memory_usage = "medium",

            // CPU intensity (low, medium, high)
            .cpu_intensity = "low",

            // Network bandwidth requirements (low, medium, high)
            .network_bandwidth = "low",
        },
    },

    // ============================================================================
    // CATEGORIZATION & DISCOVERY
    // ============================================================================
    .categorization = .{
        // Primary category
        .primary_category = "documentation",

        // Secondary categories (array of strings)
        .secondary_categories = .{
            "content_creation",
            "writing",
            "file_processing",
        },

        // Tags for search and filtering
        .tags = .{
            "markdown",
            "documentation",
            "content",
            "writing",
            "editing",
        },

        // Intended use cases
        .use_cases = .{
            "Technical documentation (API docs, user manuals, specifications)",
            "Academic writing (research papers, dissertations, articles)",
            "Content publishing (blogs, tutorials, guides)",
            "Project documentation (READMEs, wikis, knowledge bases)",
            "Long-form content (books, reports, comprehensive guides)",
        },
    },

    // ============================================================================
    // DEPENDENCIES
    // ============================================================================
    .dependencies = .{
        // Required Zig version (minimum)
        .zig_version = "0.15.1",

        // External dependencies
        .external = .{
            // Array of required system packages/libraries
            .system_packages = .{},

            // Zig packages (from build.zig.zon)
            .zig_packages = .{},
        },

        // Optional dependencies
        .optional = .{
            // Features that can work without these
            .features = .{},
        },
    },

    // ============================================================================
    // BUILD CONFIGURATION
    // ============================================================================
    .build = .{
        // Build targets supported
        .targets = .{
            "x86_64-linux",
            "aarch64-linux",
            "x86_64-macos",
            "aarch64-macos",
            "x86_64-windows",
        },

        // Build options
        .options = .{
            // Whether agent supports debug builds
            .debug_build = true,

            // Whether agent supports release builds
            .release_build = true,

            // Whether agent can be built as library
            .library_build = false,

            // Custom build flags (array of strings)
            .custom_flags = .{},
        },

        // Build artifacts
        .artifacts = .{
            // Binary name
            .binary_name = "markdown-agent",

            // Additional files to include in distribution
            .include_files = .{
                "README.md",
                "config.zon",
                "examples.md",
            },
        },
    },

    // ============================================================================
    // TOOL CATEGORIES
    // ============================================================================
    .tools = .{
        // Categories of tools this agent provides
        .categories = .{
            "document_processing",
            "content_editing",
            "file_management",
            "validation",
            "transformation",
            "workflow_processing",
        },

        // Specific tools provided (for documentation)
        .provided_tools = .{
            .{
                .name = "document_io",
                .description = "Read files, search content, and explore workspace structure",
                .category = "document_processing",
                .parameters = "file_path:string, pattern:string, recursive:bool",
            },
            .{
                .name = "content_editor",
                .description = "Edit and modify markdown document content with precision",
                .category = "content_editing",
                .parameters = "file_path:string, operation:string, content:string",
            },
            .{
                .name = "document_validator",
                .description = "Validate document quality, structure, and compliance",
                .category = "validation",
                .parameters = "file_path:string, checks:string[], strict:bool",
            },
            .{
                .name = "document_transformer",
                .description = "Create new documents, convert formats, and apply templates",
                .category = "transformation",
                .parameters = "source_path:string, target_path:string, template:string",
            },
            .{
                .name = "workflow_processor",
                .description = "Execute complex multi-step workflows and batch operations",
                .category = "workflow_processing",
                .parameters = "workflow:string, files:string[], options:object",
            },
            .{
                .name = "file_manager",
                .description = "Manage files and directories in the workspace",
                .category = "file_management",
                .parameters = "operation:string, path:string, target:string",
            },
        },

        // Tool integration
        .integration = .{
            // Whether tools support JSON input/output
            .json_tools = true,

            // Whether tools support streaming
            .streaming_tools = false,

            // Whether tools can be chained together
            .chainable_tools = true,
        },
    },

    // ============================================================================
    // RUNTIME REQUIREMENTS
    // ============================================================================
    .runtime = .{
        // Minimum system requirements
        .system_requirements = .{
            // Minimum RAM in MB
            .min_ram_mb = 256,

            // Minimum disk space in MB
            .min_disk_mb = 50,

            // Supported operating systems
            .supported_os = .{
                "linux",
                "macos",
                "windows",
            },
        },

        // Environment variables required
        .environment_variables = .{},

        // Configuration files required
        .config_files = .{
            .{ .name = "config.zon", .description = "Agent configuration file", .required = true },
        },

        // Network requirements
        .network = .{
            // Required ports
            .ports = .{},

            // Required endpoints
            .endpoints = .{},
        },
    },

    // ============================================================================
    // METADATA
    // ============================================================================
    .metadata = .{
        // When this manifest was created/updated
        .created_at = "2025-01-27",

        // Template version this manifest conforms to
        .template_version = "1.0",

        // Additional notes or comments
        .notes = "Specialized CLI agent for comprehensive markdown document processing, editing, and management",

        // Changelog for this version
        .changelog = .{
            .{
                .version = "2.0.0",
                .changes = "Enterprise-grade markdown systems architect with comprehensive toolset for document processing, validation, and workflow management",
            },
        },
    },
}
